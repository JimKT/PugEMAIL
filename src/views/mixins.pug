//- Display One Column
mixin one-column(tablewidth,onecol)
	table.max-width(width=tablewidth cellpadding="0" cellspacing="0" align="center")
		tr
			td= onecol
//- Display Two Columns
mixin two-column(tablewidth,onecol,twocol)
	table.max-width(width=tablewidth cellpadding="0" cellspacing="0" align="center")
		tr
			td.full-width= onecol
			td.full-width= twocol
//- Image Mixin
mixin image(width,height,src)
	img(src=src height=height width=width style="display:block;")
//- Create Empty Table
mixin table(width,tableclass,align)
	table(width=width class=tableclass align=align)
		tr
			td